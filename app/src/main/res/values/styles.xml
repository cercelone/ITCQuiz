<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for the questions -->
    <style name="questionsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/question_background</item>
        <item name="android:padding">@dimen/questionPadding</item>
        <item name="android:layout_marginBottom">@dimen/questionMarginBottom</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/questionsTextSize</item>
        <item name="android:minLines">3</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Style for the Next Buttons -->
    <style name="nextButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/buttonsTextColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for the previous Buttons -->
    <style name="previousButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/buttonsTextColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for the Finish Button -->
    <style name="finishButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/finish_background</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginRight">@dimen/finishButtonMargin</item>
    </style>

    <!-- Style for the radio Buttons -->
    <style name="radioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:paddingLeft">@dimen/radioButtonLeftPadding</item>
        <item name="android:textSize">@dimen/radioButtonTextSize</item>
    </style>

    <!-- Style for the check Boxes -->
    <style name="checkBoxStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:paddingLeft">@dimen/checkBoxLeftPadding</item>
        <item name="android:layout_marginLeft">@dimen/checkBoxMargin</item>
        <item name="android:layout_marginRight">@dimen/checkBoxMargin</item>
        <item name="android:textSize">@dimen/checkBoxTextSize</item>
    </style>

    <!-- Style for the radio Groups -->
    <style name="radioGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/radioGroupPadding</item>
        <item name="android:paddingRight">@dimen/radioGroupPadding</item>
    </style>

    <!-- Style for the CardViews -->
    <style name="cardViewStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="contentPaddingBottom">@dimen/cardPaddingBottom</item>
    </style>

    <!-- Style for the RelativeLayouts that holds the Next and Back buttons -->
    <style name="relativeLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/finishButtonMargin</item>
    </style>

    <!-- Style for the alertDialog onBackPress -->
    <style name="alertStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Style for the Lunch Screen -->
    <style name="lunchScreenStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <!-- Style for the edit Text view from the Lunch Screen -->
    <style name="editText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:layout_marginBottom">@dimen/editTextMargin</item>
        <item name="android:layout_marginTop">@dimen/editTextMargin</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="android:textColor">@color/colorIconsText</item>
    </style>

    <!-- Style for the Start buttone from the Lunch Screen -->
    <style name="startButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/start_button</item>
        <item name="android:paddingLeft">@dimen/startButtonPadding</item>
        <item name="android:paddingRight">@dimen/startButtonPadding</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>